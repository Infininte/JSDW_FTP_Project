<Window x:Class="TestListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:TestListBox"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Resources>
            <ObjectDataProvider x:Key="persons" ObjectType="{x:Type svc:PersonService}" MethodName="GetPersonList"/>
        </Grid.Resources>
        
        <TextBlock></TextBlock>
        <ListView x:Name="lvPersons" ItemsSource="{Binding Source={StaticResource persons}}" IsSynchronizedWithCurrentItem="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="500" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Name="Name" Width="120"/>
                            <ColumnDefinition Name="Age" Width="*"/>
                            <ColumnDefinition Name="Potpurific" Width="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Path=name}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Path=age}"/>
                        <TextBlock Grid.Column="2" Text="Extra"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </Grid>
</Window>
