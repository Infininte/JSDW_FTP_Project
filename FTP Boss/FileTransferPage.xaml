<Page
    x:Class="FTP_Boss.FileTransferPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FTP_Boss"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="40" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1" FontWeight="Light" FontFamily="Segoe UI" FontSize="42" Margin="0, 80,0,0">Connection Name</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" FontWeight="Light" FontFamily="Segoe UI" FontSize="26" Margin="0,0,0,0" SelectionChanged="TextBlock_SelectionChanged">Local</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2" FontWeight="Light" FontFamily="Segoe UI" FontSize="26" Margin="0,0,0,0">Server</TextBlock>

        <GridView Grid.Row="2" Grid.Column="1" ItemsSource="{Binding}" DisplayMemberPath="Name"/>

    </Grid>
</Page>
