    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        
        <ToolBarPanel Orientation="Horizontal">
            <Button x:Name="button_getCredentials" Content="Credentials" Width="75" Margin="10 0 0 0" Click="Button_Click" Height="20"/>
            <Button x:Name="button_connect" Content="Connect" Width="75" Click="Button_Connect" Height="20" Margin="10 0 0 0"/>

        </ToolBarPanel>

        <Label Grid.Row="1" Grid.Column="0" Content="Local" FontSize="22" Margin="10 0 0 0"/>
                <TreeView Margin="10 0 0 0" Grid.Row="2" Grid.Column="0" Name="localDirectoryBrowser" TreeViewItem.Expanded="TreeViewItemExpanded">
                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Upload" Click="upload_Click"/>
                        </ContextMenu>
            </TreeView.ContextMenu>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type self:DirectoryItem}" ItemsSource="{Binding DirectoryItems}">
                            <TextBlock Text="{Binding Name}" />
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
         
        <Label Grid.Row="1" Grid.Column="1" Content="Server" FontSize="22" Margin="10 0 0 0"/>
        <ListBox Margin="10 0 0 0" Grid.Row="2" Grid.Column="1" Name="ServerDirectoryBrowser" MouseDoubleClick="remoteDirBrowser_MouseDoubleClick">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Create Directory" Click="createDirectoryRemote_Click"/>
                    <MenuItem Header="Delete" Click="delete_Click"/>
                    <MenuItem Header="Download" Click="download_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type  self:RemoteDirectoryItem}" >
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ProgressBar Name="progressBar" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Width="306" Height="30"/>

